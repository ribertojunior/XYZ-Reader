<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/list_item_card_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    android:elevation="@dimen/card_elevation"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <com.example.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:background="@color/photo_placeholder"

            />

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/list_item_padding"
            android:paddingTop="@dimen/list_item_padding"
            android:paddingRight="@dimen/list_item_padding"
            android:paddingBottom="@dimen/list_item_padding_bottom"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/card_title_text_size"
            android:ellipsize="end"
            android:maxLines="4"
            tools:text="Mysteries of the Universe Solved"/>

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/list_item_padding"
            android:paddingRight="@dimen/list_item_padding"
            android:paddingBottom="@dimen/list_item_padding"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="@dimen/card_body_text_size"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="19 de jun 2013 by Carl Sagan" />
    </LinearLayout>

</android.support.v7.widget.CardView>
