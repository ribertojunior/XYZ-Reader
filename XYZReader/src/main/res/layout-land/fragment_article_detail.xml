<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/root">
    <android.support.v4.widget.Space
        android:id="@+id/center_image"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme_background"
        android:orientation="vertical"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/toolbar_background">

            <ImageView
                android:id="@+id/photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/article_photo"
                tools:src="@drawable/place_holder"
                android:elevation="@dimen/app_bar_elevation"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/photo_background_protection"
                android:elevation="@dimen/app_bar_elevation"
                />

        </FrameLayout>
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:id="@+id/text_layout"
        android:layout_above="@id/center_image"
        android:layout_marginLeft="@dimen/text_layout_margin"
        android:layout_marginRight="@dimen/text_layout_margin"
        android:elevation="@dimen/app_bar_elevation">

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Display1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/detail_metabar_title_bottom_padding"
            android:fontFamily="sans-serif-condensed"
            android:lineSpacingMultiplier="0.9"
            android:textColor="@android:color/white"
            android:textSize="@dimen/article_title_text_size"
            tools:text="An Empire State of Mind"
            />

        <TextView
            android:id="@+id/article_byline"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            tools:text="18 de jun de 2013 by Ernest Highway"
            android:paddingBottom="@dimen/article_byline_padding"
            />
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin"
        android:paddingRight="@dimen/card_padding"
        android:paddingLeft="@dimen/card_padding"
        android:elevation="@dimen/app_bar_elevation"
        android:layout_below="@id/text_layout"
        android:layout_alignParentBottom="true">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/scroll_view_margin"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">

                <com.example.xyzreader.ui.MaxWidthLinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_gravity="center_horizontal"
                    android:maxWidth="@dimen/detail_card_max_width"
                    android:paddingTop="@dimen/detail_metabar_vert_padding"
                    android:background="@android:color/white">

                    <TextView
                        android:id="@+id/article_body"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/article_body_margin"
                        android:layout_marginRight="@dimen/article_body_margin"
                        android:textColorLink="@color/theme_accent"
                        android:textSize="@dimen/detail_body_text_size"
                        android:lineSpacingMultiplier="@fraction/detail_body_line_spacing_multiplier"
                        tools:text="On the layout level, design your app layout to minimize opportunities for interference. For example, position the FAB to one side of a stream of cards so the FAB wonâ€™t interfere when a user tries to pick up one of cards." />

                </com.example.xyzreader.ui.MaxWidthLinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/share_fab"
        android:stateListAnimator="@animator/fab_state_list_anim"
        android:background="@drawable/add_fab_background"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/center_image"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_width="@dimen/fab_width"
        android:layout_height="@dimen/fab_height"
        android:src="@drawable/ic_share"
        android:elevation="@dimen/fab_elevation"
        android:contentDescription="@string/action_share" />
</RelativeLayout>



